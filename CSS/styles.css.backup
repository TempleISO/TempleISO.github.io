/*========== Reset ==========*/
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/*========== Body ==========*/
body {
  font-family: Arial, sans-serif;
  line-height: 1.6;
  background: #000000;
  color: #999999;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/*========== Header ==========*/
header {
  background-color: #160000;
  color: white;
  padding: 1.5rem 1rem;
  text-align: center;
}

header h1 {
  font-size: 2.5rem;
  margin-bottom: 0.2rem;
}

header .title {
  font-weight: 300;
  margin-bottom: 1rem;
}

nav {
  margin-top: 0.5rem;
}

nav a {
  color: white;
  text-decoration: none;
  margin: 0 0.75rem;
  padding-bottom: 0.25rem;
  font-weight: 600;
  border-bottom: 2px solid transparent;
  transition: border-color 0.3s;
}

nav a:hover,
nav a.active {
  border-bottom: 2px solid white;
}

/*========== Main ==========*/
main {
  flex: 1;
  padding: 2rem 1rem;
  max-width: 900px;
  margin: 0 auto;
  background: rgb(17, 17, 17);
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
  border-radius: 5px;
}

h2 {
  margin-bottom: 1rem;
  color: #860000;
}

h3 {
  margin-top: 1.5rem;
  margin-bottom: 0.75rem;
  color: #4e0000;
}

ul {
  list-style-type: disc;
  padding-left: 1.5rem;
  margin-bottom: 1rem;
}

article {
  margin-bottom: 1.5rem;
}

/*========== Footer ==========*/
footer {
  background: #222;
  color: #aaa;
  text-align: center;
  padding: 1rem;
  font-size: 0.9rem;
}